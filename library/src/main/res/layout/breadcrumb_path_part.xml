<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/pathPartSeparator"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_centerVertical="true"
        android:tint="@color/path_part_separator"
        android:src="@drawable/path_part_separator"/>

    <TextView
        android:id="@+id/pathPartValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:maxEms="6"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/pathPartSeparator"
        style="@style/BreadcrumbStyle"/>
</RelativeLayout>